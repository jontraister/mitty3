    <script type="text/javascript">

		init();

        <!-- Photo - Auto-resize -->

		var loaded = false;
		$('#castandcrew img').load(function(){
			windowResize();				
			if(!loaded) {
				RefreshSocial(false);
				loaded = true;
			}
		})

		$('.carousel').bind('slid', function() {
			RefreshSocial(true)
			//windowResize();	
		});
		
		function RefreshSocial(setPushState) {
			var activeImg= $('#photosCarousel .active img.photo');
			var url = '<?php echo $this->vars['url'];?>' + (activeImg.attr('data-url'));
			var msg = '<?php echo $this->vars['meta']['shareMessage'] ?>' + url;
			
			ReloadShareButtons(url, msg);
			
			if(setPushState) {
				History.pushState(null,  activeImg.attr('alt'), activeImg.attr('data-url'));
				windowResize();
			};
		}
		

	</script>

